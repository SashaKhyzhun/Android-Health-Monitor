<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentPanel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/image_view_challenge_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <TextView
        android:id="@+id/text_view_challenge_duration"
        android:text="7 of 21"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/line"
        android:layout_alignBottom="@+id/image_view_challenge_image" />

    <TextView
        android:id="@+id/text_view_challenge_title"
        android:text="No Smoking"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/image_view_challenge_image"
        android:maxLines="1"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/text_view_challenge_with"
        android:textStyle="normal"
        android:textColor="@color/secondary_text"
        android:textAlignment="textStart"
        android:layout_marginStart="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_challenge_title"
        android:layout_toEndOf="@+id/image_view_challenge_image"
        android:maxLines="1"
        />

    <View
        android:id="@+id/line"
        android:layout_below="@id/image_view_challenge_image"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#23000000" />

</RelativeLayout>