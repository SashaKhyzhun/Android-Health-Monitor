<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOP PART-->

        <TextView
            android:id="@+id/text_view_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_something1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_connectivity"
                android:text="Connectivity status"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_connectivity_status"
                android:text="@string/connectivity_status_no_paired_devices"
                android:textColor="@color/secondary_text"
                android:layout_below="@+id/text_view_connectivity"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />
            <RadioButton
                android:id="@+id/radio_button_connectivity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_delete_all_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete all todos"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_delete_all_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete all labels"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_tutorial_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick tutorial again"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <!-- MIDDLE PART -->



        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/text_view_send_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send feedback"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_more_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More apps"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#e4e4e4" />

        <!-- BOTTOM PART -->

        <TextView
            android:id="@+id/text_view_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="Other"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/text_view_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_rate_the_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate the app"
            android:textColor="@color/primary_text_dark"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/text_view_build_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build version 2.0.1"
            android:textColor="#afafaf"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

    </LinearLayout>


</ScrollView>