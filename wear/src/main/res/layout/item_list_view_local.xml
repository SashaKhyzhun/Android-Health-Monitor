<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/layout_item_list_local"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--My custom list view with text in center of list_view ! -->

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tv_item_list_view"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.Wearable.Small"
        android:paddingStart="44dip"
        android:paddingEnd="44dip"
        android:paddingBottom="8dp"
        android:paddingTop="4dp"
        android:gravity="start"
        />

    <include layout="@layout/item_line" />

</LinearLayout>